<h2>商品編集</h2><br/>

<div><%= form_with model:@item, url: admin_item_path(@item), local: true do |f| %>
  <div>
    <%= attachment_image_tag @item, :image, size: "100x100" %>
    <%= f.attachment_field :image %>
  </div>


  <div>
    <p><%= f.label :商品名 %>
      <%= f.text_field :name, autocomplete: "商品名" %>
    </p>
    <p><%= f.label :商品説明 %>
      <%= f.text_area :explanation, autocomplete: "商品説明" %>
    </p>
    <p><%= f.label :ジャンル %>
      <%= f.collection_select(:genre_id, @genres, :id, :name) %>
    </p>
    <p><%= f.label :税抜価格 %>
      <%= f.text_field :price, autocomplete: "税抜価格" %>
    </p>
    <p>
      <%= f.label :販売ステータス %>
      <%= f.select :is_released, {'販売中': true, '販売停止中': false}, { include_blank: false, selected: true} %>
    </p>
  </div>

 <%= f.submit "変更を保存" %>

  <% end %></div>