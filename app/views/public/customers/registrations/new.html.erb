<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    （姓）<%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>

    （名）<%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "フリガナ（姓）" %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "フリガナ（名）" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :post_number, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>
